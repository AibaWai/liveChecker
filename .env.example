# 要監控的 Instagram 使用者名稱（不含@）
TARGET_USERNAME=instagram

# Discord Webhook URL（到指定 channel 建立 webhook 後取得）
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/xxxxx/xxxxx

# 刷新間隔秒數（預設 60）
POLL_INTERVAL_SECONDS=60

# 是否 headless（預設 true；除錯時可 false）
HEADLESS=true

# Cookie 來源（二選一）
# 1) 直接貼 JSON：COOKIES_JSON='[{"name":"sessionid","value":"...","domain":".instagram.com","path":"/","expires":1699999999,"httpOnly":true,"secure":true,"sameSite":"None"}]'
# 2) 在容器掛載 /app/cookies.json
COOKIES_JSON=

# 服務健康檢查 port
PORT=8080

# 日誌等級：info | debug
LOG_LEVEL=info
